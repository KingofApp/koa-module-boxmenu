 {
  "name": "Box Menu",
  "identifier": "boxmenu",
  "type": "A",
  "version": "1.0.9",
  "author": "King of App",
  "category": [
    "menu"
  ],
  "platforms" : [
    "android",
    "ios",
    "windows"
  ],
  "price": 0,
  "subscription": false,
  "canContain": true,
  "icon": "menu",
  "description": {
    "en-US" : "Menu displayed from the bottom of the App showing the contents boxy. It incorporates a header with logo and name (optional).",
    "es-ES" : "Menú que se despliega desde la parte inferior de la App mostrando los contenidos en forma de caja. Incorpora cabecera con logo y nombre (opcional)."
  },
  "descriptionShort": {
    "en-US" : "dropdown large buttons",
    "es-ES" : "Menú desplegable de botones grandes"
  },
  "documentation": {
    "es-ES": "modules/boxmenu/documentation/es_ES.md",
    "en-US": "modules/boxmenu/documentation/en_US.md"
  },
  "images" : {
    "list" : "modules/boxmenu/images/boxmenu_list.png",
    "screenshots" : [
      "modules/boxmenu/images/boxmenu_screenshot01.png",
      "modules/boxmenu/images/boxmenu_screenshot03.png"
    ],
    "popover" : "modules/boxmenu/images/boxmenu_popover.png",
    "banner" : "modules/boxmenu/images/boxmenu_popover.png",
    "logo" : "modules/boxmenu/images/boxmenu_icon.png"
  },
  "showOn": {
    "menu": false,
    "market": true,
    "dragDrop": true
  },
  "requires": [],
  "view": "modules/boxmenu/index.html",
  "files": [
    "modules/boxmenu/controller.js",
    "modules/boxmenu/styles.html"
  ],
  "libs": [
    {
      "bower": {
        "PolymerElements/iron-flex-layout": "^1.3.0"
      },
      "src": "bower_components/iron-flex-layout/iron-flex-layout.html"
    }
  ],
  "scope": {
    "menuItems": [],
    "headerShown": false,
    "headerBackgroundImage": "",
    "headerBackgroundColor": "",
    "headerReverse": false,
    "headerTitle": "",
    "headerLogo": "",
    "headerAlignment": "left",
    "showicons": true,
    "columns": 2,
    "toolbarTitle": true,
    "toolbarLogo": ""
  },
  "config": [
    {
      "type": "repeatSection",
      "key": "menuItems",
      "templateOptions": {
        "label": "Items",
        "btnText": "Add another item to the menu",
        "fields": [{
          "type": "select",
          "key": "path",
          "templateOptions": {
            "label": "Path",
            "required": true
          }
        }, {
          "type": "input",
          "key": "bgImage",
          "templateOptions": {
            "label": "Background Image URL",
            "placeholder": "(Optional)"
          }
        }, {
          "type": "input",
          "key": "bgColor",
          "templateOptions": {
            "label": "Background Color",
            "placeholder": "(Optional)"
          }
        }]
      }
    },
    {
      "key": "headerShown",
      "type": "checkbox",
      "templateOptions": {
        "label": "Header",
        "description": "Show header"
      }
    },
    {
      "key": "headerBackgroundImage",
      "type": "input",
      "templateOptions": {
        "label": "Header image",
        "description": "The URL of the header background image",
        "pattern": "(https?://)([/\\w.()-]*).*"
      }
    },
    {
      "key": "headerBackgroundColor",
      "type": "input",
      "templateOptions": {
        "label": "Header color",
        "description": "The header background color"
      }
    },
    {
      "key": "headerReverse",
      "type": "checkbox",
      "templateOptions": {
        "label": "Header reverse",
        "description": "Reverse order of logo and title"
      }
    },
    {
      "key": "headerTitle",
      "type": "input",
      "templateOptions": {
        "label": "Header title",
        "description": "The header title"
      }
    },
    {
      "key": "headerLogo",
      "type": "input",
      "templateOptions": {
        "label": "Header logo",
        "description": "The URL of the header logo image",
        "pattern": "(https?://)([/\\w.()-]*).*"
      }
    },
    {
      "key": "headerAlignment",
      "type": "select",
      "templateOptions": {
        "label": "Header alignment",
        "options": [
          {"name": "left", "value": "left"},
          {"name": "center", "value": "center"},
          {"name": "right", "value": "right"}
        ]
      }
    },
    {
      "key": "showicons",
      "type": "checkbox",
      "templateOptions": {
        "description": "Show menu icons",
        "label": "Menu icons"
      }
    },
    {
      "key": "columns",
      "type": "input",
      "templateOptions": {
        "label": "Columns",
        "description": "Number of columns"
      }
    },
    {
      "key": "toolbarTitle",
      "type": "checkbox",
      "templateOptions": {
        "label": "Toolbar title",
        "description": "Show the toolbar title"
      }
    },
    {
      "key": "toolbarLogo",
      "type": "input",
      "templateOptions": {
        "label": "Toolbar logo",
        "description": "The URL of the toolbar logo image",
        "pattern": "(https?://)([/\\w.()-]*).*"
      }
    }
  ]
}
